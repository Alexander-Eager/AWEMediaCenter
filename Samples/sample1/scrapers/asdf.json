{
	"name": "The Movie Database",
	
	"type": "Movie",

	"filename": ".*/([\\w_-\\.\\s]+)\\.(avi|iso|mpg|mpeg|webarchive)",

	"procedures": [
		{
			"repeat": false,

			"look in file": "http://www.themoviedb.org/search/movie?query=$1",
			"for": ";return s\\}function r\\(t,e\\)\\{var n=i[t]\\|\\|\\(i[t]=[]\\);n\\.push\\(",

			"name": "$2",
			"details.Year": "$3",

			"procedures": [
				{
					"repeat": false,

					"look in file": "http://www.themoviedb.org/movie/$1.html",
					"for": "<meta name=\"description\" content=\"(.*)\"[\\v.]*<meta property=\"og:image\" content=\"http://image\\.tmdb\\.org/t/p/\\w*/(.*)\" />[\\v.]*<meta property=\"og:image\" content=\"http://image\\.tmdb\\.org/t/p/\\w*/(.*)\" />",

					"description": "$1",

					"icons.Front": "http://image.tmdb.org/t/p/original/$3",
					"icons.default": "Front",

					"fanarts.Main": "http://image.tmdb.org/t/p/original/$5",
					"fanarts.default": "Main",

					"procedures": []
				},
				{
					"repeat": true,

					"look in file": "http://www.themoviedb.org/movie/$2.html",
					"for": "<td class=\"job\">Directors?:</td>[\\v.]*itemprop=\"name\">(.*)</span>[\\v.]*<td class=\"job\">Writer",

					"details.Director(s)": "$1",

					"procedures": []
				},
				{
					"repeat": true,

					"look in file": "http://www.themoviedb.org/movie/$2.html",
					"for": "<td class=\"job\">Writers?:</td>[\\v.]*itemprop=\"name\">(.*)</span>[\\v.]*<h3>Cast</h3>",

					"details.Writer(s)": "$1",

					"procedures": []
				},
				{
					"repeat": true,

					"look in file": "http://www.themoviedb.org/movie/$2.html",
					"for": "<div class=\"castItem\">[\\v\\s]*<span class=\"image\">[\\v\\s]*<a href=\"/person/(\\d+-\\w+-\\w+)\">",

					"procedures": [
						{
							"repeat": false,

							"look in file": "http://www.themoviedb.org/person/$3.html",
							"for": "<h2><span id=\"name\" itemprop=\"name\"><a href=\"/person/$3\">(.*)</a></span></h2>",

							"details.Cast": "$1"
						}
					]
				}
			]
		}
	],

	"copy": [
		"icons.Front",
		"fanarts.Main"
	]
}